{
  "name": "school-backend",
  "version": "1.0.0",
  "description": "School Management System Backend",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=512 app.js",
    "dev": "nodemon app.js",
    "build": "npm run clean && npm run copy:files && npm run generate:prisma && npm run create:start-script",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy:files": "cp -r app.js controllers middleware models routes services utils cache config validators cqrs aggregates projections eventstore store dist/ && cp -r prisma dist/ && cp package.json dist/ && cp .env* dist/ 2>/dev/null || true",
    "generate:prisma": "cd dist && npx prisma generate",
    "create:start-script": "echo '#!/bin/bash\\ncd dist\\nnpm install --production\\nnpx prisma db push\\nnode app.js' > dist/start.sh && chmod +x dist/start.sh",
    "start:prod": "cd dist && node app.js",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:deploy": "npm run db:generate && npm run db:push",
    "install:prod": "npm ci --only=production",
    "deploy": "npm run build && npm run install:prod && npm run db:deploy",
    "package": "npm run build && cd dist && tar -czf ../school-backend-production.tar.gz ."
  },
  "dependencies": {
    "@huggingface/inference": "^4.5.3",
    "@prisma/client": "^6.12.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cohere-ai": "^7.18.0",
    "compression": "^1.7.4",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "googleapis": "^153.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jimp": "^0.22.10",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-rsa": "^1.1.1",
    "nodemailer": "^6.9.0",
    "openai": "^5.10.2",
    "pdfkit": "^0.17.1",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "prisma": "^6.12.0",
    "redis": "^4.6.10",
    "sequelize": "^6.32.1",
    "socket.io": "^4.8.1",
    "stripe": "^18.3.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "nodemon": "^3.0.3"
  },
  "keywords": [
    "school",
    "management",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
